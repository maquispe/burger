<h1>Welcome to Eat-Da-Burger!</h1>
<div class="container">
  <div class="row">
    <div class="col-lg-4">
      <h2>Burgers I want to eat:</h2>

      <ul>
        {{#each burgers}}
        {{#unless devoured}}
        {{> burgers/burgers-block devoured=false}}
        {{/unless}}
        {{/each}}
      </ul>
    </div>

    <div class="col-lg-4">
      <h2>Enter the kind of burger you'd like!</h2>
      <form class="create-form">
        <div class="form-group">
          <label for="burger">Burger Name:</label>
          <input type="text" id="burger" name="name">
          <button type="submit" id="addBurger"class="btn btn-warning">Add Burger</button>
        </div>
      </form>
    </div>

    <div class="col-lg-4">
      <h2>Burgers I've demolished:</h2>

      <ul>
        {{#each burgers}}
        {{#if devoured}}
        <li>{{burger_name}}</li>
        {{/if}}
        {{/each}}
      </ul>
    </div>

  </div>
</div>